{
  "compilerOptions": {
    "target": "es6",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "baseUrl": "src",
    "esModuleInterop": true,
    "isolatedModules": true,
    "noEmit": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "jsx": "react",
  },
  "exclude": ["node_modules", "*.spec.ts"],
  "include": ["src"]
}
